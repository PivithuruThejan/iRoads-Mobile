<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="codemo.iroads_mobile.Fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="8"
                    android:text="Automatic Saving"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <Switch
                    android:id="@+id/savingSwitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:text="" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorXReori" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="8"
                    android:text="Signal Filtering"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <Switch
                    android:id="@+id/filteringSwitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:checked="true"
                    android:text=""
                    android:thumbTint="@color/colorPrimary"
                    android:trackTint="@color/colorPrimary" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="5"
                    android:text="Sensitivity"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
                <SeekBar
                    android:id="@+id/filterSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="5"
                    android:progress="10"
                    android:thumbTint="@color/colorPrimary"
                    android:progressTint="@color/colorPrimary"
                    android:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorXReori" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="8"
                    android:text="Re-orientation"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <Switch
                    android:id="@+id/orientSwitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:checked="true"
                    android:text=""
                    android:thumbTint="@color/colorPrimary"
                    android:trackTint="@color/colorPrimary" />

            </LinearLayout>


            <RadioGroup
                android:id="@+id/reorientationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:weightSum="2">
                <RadioButton
                    android:id="@+id/nericel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="true"
                    android:text="Nericel"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColorLink="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/wolverine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="false"
                    android:text="Wolverine"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
            </RadioGroup>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
